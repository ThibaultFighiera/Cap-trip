<resources>

    <style name="Name">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Name.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="Name.Big">
        <item name="android:letterSpacing">0.3</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="Subtitle.Big">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.3</item>
    </style>
</resources>
